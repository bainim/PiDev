<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="PictureNetwork">
		<jta-data-source>java:/picturenetworkDS</jta-data-source>
		<class>com.PictureNetwork.persistance.BlackList</class>
		<class>com.PictureNetwork.persistance.Comment</class>
		<class>com.PictureNetwork.persistance.Event</class>
		<class>com.PictureNetwork.persistance.Claims</class>
		<class>com.PictureNetwork.persistance.Photo</class>
		<class>com.PictureNetwork.persistance.User</class>
		<class>com.PictureNetwork.persistance.Subject</class>
		<class>com.PictureNetwork.persistance.Forum</class>
		<class>com.PictureNetwork.persistance.Admin</class>
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="create"/>
		</properties>
	</persistence-unit>
</persistence>
